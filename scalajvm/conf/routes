# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Main routes
GET           /                                  controllers.Quotes.index
GET           /quote/new                         controllers.SuggestedQuotes.newQuote
POST          /quote/new                         controllers.SuggestedQuotes.addQuote
GET           /quote/$id<[0-9]+>                 controllers.Quotes.quote(id: String)
POST          /quote/$id<[0-9]+>/upvote          controllers.Voting.vote(id: String, up: Boolean = true)
POST          /quote/$id<[0-9]+>/downvote        controllers.Voting.vote(id: String, up: Boolean = false)
POST          /quote                             controllers.Quotes.addQuote
DELETE        /quote/$id<[0-9]+>                 controllers.Quotes.deleteQuote(id: String)


# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                      controllers.Assets.at(path="/public", file)
